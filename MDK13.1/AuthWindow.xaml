<Window x:Class="MDK13.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Авторизация" Height="130" 
        WindowStartupLocation="CenterOwner" 
        Width="290" 
        Closing="OnWindowClosing" 
        ResizeMode="NoResize" 
        FontSize="20"  
        Activated="OnWindowActivation">
    <Grid>
        <StackPanel>
            <PasswordBox x:Name="passwordInput" PasswordChar="*"/>
            <Button Content="Войти" IsDefault="True" Click="Login_Click"/>
            <Button Content="Отмена" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
